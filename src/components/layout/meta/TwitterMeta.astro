import type { MetaProps } from 'types/meta';

export type Props = MetaProps;

const { title, path, description } = Astro.props;
const concatPath = (value?: string) => value !== undefined ? `https://bdreece.dev${value}` : 'https://bdreece.dev';
const url = concatPath(path);
const image = concatPath('/social.png');
---

<meta
  name='twitter:card'
  content={image}
/>
<meta
  property='twitter:domain'
  content='bdreece.dev'
/>
<meta
  property='twitter:url'
  content={url}
/>
<meta
  name='twitter:title'
  content={title}
/>
<meta
  name='twitter:description'
  content={description}
/>
<meta
  name='twitter:image'
  content={image}
/>
